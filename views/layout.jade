doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='http://code.jquery.com/jquery-2.1.0.min.js')
    script(src='http://underscorejs.org/underscore-min.js')
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/game.js')
  body
    //- block content
    input(type="text", name="message", id="message")
    button(id="start") start
    button(id="draw_card") draw card
    button(id="turn_start") turn start
    button(id="bet") bet
    button(id="sample") sample
    br
    br
    label(for="action-type") select-actions
    select(id="action-type", name="action")
        option(value='buy') buy
        option(value='sell') sell
        option(value='create_product') create_product
    br
    br
    label(for="target-country") target-country
    select(id="target-country", name="action")
        option(value='vietnum') vietnum
        option(value='thailand') thailand
        option(value='indnesia') indnesia
    button(id="action-btn") Send Action
    br
    br
    label(for="bet-money") money
    input(id="bet-money", name="bet-money", type="text")
    button(id="bet-money-btn", name="bet-money-btn") bet-money
    button(id="turn_end") turn end
    div(id="current-notification")